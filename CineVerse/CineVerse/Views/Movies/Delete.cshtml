@model CineVerse.Models.Movie

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">
    <div class="card shadow-lg border-danger">
        <div class="card-header bg-danger text-white">
            <h3>Delete Confirmation</h3>
        </div>
        <div class="card-body">
            <h5 class="card-title text-danger">Are you sure you want to delete this movie?</h5>
            <div class="row mt-4">
                <div class="col-md-4 text-center">
                    @if (Model.Photo != null)
                    {
                        var base64 = Convert.ToBase64String(Model.Photo);
                        var imgSrc = $"data:image/jpeg;base64,{base64}";
                        <img src="@imgSrc" class="img-fluid rounded border shadow-sm" alt="Movie Poster" />
                    }
                    else
                    {
                        <p class="text-muted">No image available</p>
                    }
                </div>
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-4">Movie Name</dt>
                        <dd class="col-sm-8">@Model.MovieName</dd>

                        <dt class="col-sm-4">Director</dt>
                        <dd class="col-sm-8">@Model.Director</dd>

                        <dt class="col-sm-4">Release Date</dt>
                        <dd class="col-sm-8">@Model.ReleaseDate.ToShortDateString()</dd>

                        <dt class="col-sm-4">Description</dt>
                        <dd class="col-sm-8">@Model.Description</dd>
                    </dl>
                </div>
            </div>

            <form asp-action="Delete" method="post" class="mt-4">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Confirm Delete
                </button>
                <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
            </form>
        </div>
    </div>
</div>
